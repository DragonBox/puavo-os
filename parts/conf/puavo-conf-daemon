require 'dbus'

require 'puavo/conf'

class Conf1 < DBus::Object

  def initialize(object_path)
    super(object_path)
    @puavoconf = Puavo::Conf.new
  end

  dbus_interface "org.puavo.Conf1" do

    dbus_method :Get, 'in name:s, out s' do |name|
      @puavoconf.get(name)
    end

  end

end

bus = DBus::SystemBus.instance

service = bus.request_service("org.puavo.Conf1")

service.export(Conf1.new('/org/puavo/Conf1'))

loop = DBus::Main.new
loop << bus
loop.run

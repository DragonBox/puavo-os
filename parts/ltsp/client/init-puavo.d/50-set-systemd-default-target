set_systemd_default_target()
{
    local screen_mode

    screen_mode=$(puavo-conf puavo.screen.mode)

    case "${screen_mode}" in
        infotv|webkiosk|login)
	    systemctl set-default graphical.target
	    ;;
	*)
	    systemctl set-default multi-user.target
	    ;;
    esac
}

set_systemd_default_target

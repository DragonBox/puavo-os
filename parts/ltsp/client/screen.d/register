#!/bin/sh

export LANG=fi_FI.UTF-8
export TERM=vt100
setupcon
clear

until /usr/sbin/puavo-install; do
  echo 'Registration and installation failed, press ENTER to try again.' \
    > /dev/stderr
  read answer
done

echo
echo -n rebooting...
for i in $(seq 5 | tac); do
  echo -n " $i"
  sleep 1
done

echo
reboot

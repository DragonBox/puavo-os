#!/usr/bin/ruby1.9.3

require "etc"
require "yaml"

$LOAD_PATH.unshift( File.dirname(__FILE__) )

require "puavo-tftp/helpers"
require "puavo-tftp/log"
require "puavo-tftp/tftpserver"

require 'optparse'

def load_config_file(filename)
  conf = YAML.load_file(filename) || {}
  symbolize_keys(conf)
end


options_defaults = {
  :port => 69,
  :group => "nogroup",
  :root => "/var/lib/tftpboot/"
}

CONF_FILES = [ "/etc/puavo-tftp.yml",
               File.join(File.dirname(__FILE__), "puavo-tftp.yml") ]

options_file = {}
CONF_FILES.each do |file|
  begin
    options_file = load_config_file(file) || {}
    break
  rescue Errno::ENOENT
    next
  end
end


options_cli = {}
OptionParser.new do |opts|
  opts.banner = "Usage: [sudo] ./server.rb [options]"

  opts.on("-r", "--root PATH", String, "Serve files from directory.") do |v|
    if v[0] == "/"
      options_cli[:root] = v
    else
      options_cli[:root] = File.join(Dir.pwd, v)
    end
  end

  opts.on("-u", "--user USER", String, "Drop to user.") do |v|
    options_cli[:user] = v
  end

  opts.on("-g", "--group GROUP", String, "Drop to group. Default #{ options_defaults[:group] }") do |v|
    options_cli[:group] = v
  end

  opts.on("-c", "--config FILE", String, "Configuration file") do |v|
    options_cli[:config] = v
  end

  opts.on("--verbose", "Print more debugging stuff.") do |v|
    $tftp_debug = true
  end

  opts.on("-p", "--port PORT", "Listen on port.") do |v|
    options_cli[:port] = v.to_i
  end

end.parse!


if options_cli[:config]
  options_file = load_config_file(options_cli[:config]) || {}
end

options = options_defaults.merge(options_file).merge(options_cli)


EventMachine::run do
  EventMachine::open_datagram_socket(
    "0.0.0.0",
    options[:port],
    PuavoTFTP::Server,
    options[:root],
    Array(options[:hooks])
  ) do

    log "Serving files from #{ options[:root] }"
    log "Listening on #{ options[:port] }"

    if Process.uid == 0
      if not options[:user]
        log "ERROR: Started as root, but no --user is defined."
        Process.exit 1
      end
      Process.initgroups(options[:group], Etc.getgrnam(options[:group]).gid)
      Process::Sys.setgid(Etc.getgrnam(options[:group]).gid)
      Process::Sys.setuid(Etc.getpwnam(options[:user]).uid)
      log "Changed to uid #{ Process.uid } and gid #{ Process.gid }"
    end

  end
end
